<div class="context">

<div class="container center_div">
<form id="form-audit" name = "form-audit" method="POST" action="/auditar">
	<div class="form-group">
    <label for="inputHash" class="text">Document Hash</label>
    <input type="text" class="form-control" name="inputHash" placeholder="Hash.">
  </div>

  <script type="text/javascript">
    function swalFire(){
      var nombre = document.forms["form-audit"]["inputHash"].value;
      if (nombre == "" )
      { 
        swal({
            title: "Careful!",
            text: "Please fill out all of the spaces before continuing",
            type: "warning",
            confirmButtonText: 'OK'
          });
        return false;
      }
    
    }
         
    </script>

  <button type="submit" class="btn btn-danger" onclick="swalFire()"> Audit Document</button>
</form>

<% if(typeof validation !== 'undefined') { %>
  <p><%= validation %></p>
<% } %>

